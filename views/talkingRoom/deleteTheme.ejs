<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">
                    以下のおしゃべりテーマを削除してもよろしいですか？
                </h6>
            </div>
            <div class="card-body">
                <form action="/talkingRoom/<%=talkTheme._id%>?_method=DELETE" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <span class="text-secondary">
                            <small>トークテーマ名</small>
                        </span>
                        <p><%=talkTheme.title%></p>
                    </div>
                    <div class="mb-5">
                        <span class="text-secondary">
                            <small>詳細・説明</small>
                        </span>
                        <p><%=talkTheme.detail%></p>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-danger">
                            トークテーマを削除する
                        </button>
                        <a href="/talkingRoom" class="btn btn-secondary">
                            戻る
                        </a>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>

<div class="mt-3">
    <legend class="fs-6 m-0">
        <span class="material-symbols-outlined align-bottom">
            visibility
        </span>
        公開情報
    </legend>
    <fieldset class="border rounded border-3 px-2 px-lg-5 pt-2 me-lg-5 mb-3">
        <% if(user.penName){%>
            <div class="d-flex justify-content-between">
                <p class="m-0 align-bottom"><b>ペンネーム: <%= user.penName %> </b></p>
                <button class="btn btn-sm btn-outline-primary mb-2" data-bs-toggle="collapse" href="#changeCollapse" role="button" aria-expanded="false" aria-controls="changeCollapse">変更</button>
            </div>
            <div class="collapse" id="changeCollapse">
                <form action="/penName/<%=user._id%>?_method=PATCH" method="POST" class="needs-validation input-group mb-3"  novalidate>
                    <input type="text" class="form-control" value="<%=user.penName%>" aria-label="penName" aria-describedby="basic-addon1" name="penName" required placeholder="ペンネームを入力してください">
                    <button class="input-group-text btn btn-warning">送信</button>
                </form>
            </div>
        <% } else { %>
            <form action="/penName/<%=user._id%>?_method=PATCH" method="POST" class="needs-validation" novalidate>
                <label for="penNameInput" class="form">ペンネームを入力する</label>
                <input type="text" id="penNameInput" name="penName" placeholder="penName" required>
                <button class="btn btn-primary">登録</button>
            </form>
        <% } %>

        <% if(user.promotion){%>
            <div class="d-flex justify-content-between">
                
                <div>
                    <p class="m-0"><b>自己紹介文: </b></p>
                    <p class="m-0"><%= user.promotion %></p>
                </div>
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" href="#changePromotionCollapse" role="button" aria-expanded="false" aria-controls="changePromotionCollapse" style="min-width:45.33px;">変更</button>
            </div>
            <div class="collapse mt-1" id="changePromotionCollapse">
                <form action="/promotion/<%=user._id%>?_method=PATCH" method="POST" class="needs-validation input-group mb-3"  novalidate>
                    <textarea class="form-control" rows="10" aria-label="promotion" aria-describedby="basic-addon1" name="promotion" required placeholder="自己紹介文を入力してください。"><%=user.promotion%></textarea>
                    <button class="input-group-text btn btn-warning">送信</button>
                </form>
            </div>
        <% } else { %>
            <form action="/promotion/<%=user._id%>?_method=PATCH" method="POST" class="needs-validation mb-3" novalidate>
                <label for="promotionInput" class="form align-bottom">自己紹介文を入力する</label>
                <textarea class="align-bottom" style="width:100%;height:90px" id="promotionInput" name="promotion" placeholder="promotion" required></textarea>
                <div class="d-flex flex-row-reverse">
                    <button class="btn btn-primary btn-sm mt-1 ms-auto">登録する</button>
                </div>
            </form>
        <% } %>
    </fieldset>
</div>

<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-lg-6 offset-lg-3">
        <div class="card shadow-lg">
        
            <div class="card-body">
                <div class="text-center">
                    <a href="/auth/google"><button class="gsi-material-button">
                        <div class="gsi-material-button-state"></div>
                        <div class="gsi-material-button-content-wrapper">
                            <div class="gsi-material-button-icon">
                                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                                    <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                                    <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                                    <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                                    <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                                    <path fill="none" d="M0 0h48v48H0z"></path>
                                </svg>
                            </div>
                            <span class="gsi-material-button-contents">Sign in with Google</span>
                            <span style="display: none;">Sign in with Google</span>
                        </div>
                    </button></a>
                    <p>Googleアカウントでログイン</p>
                </div>
                
    
                <hr>
    
                <div class="d-flex flex-column">
                    <form action="/login" method="POST" class="needs-validation card card-body shadow-sm" novalidate>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-mailアドレス:</label>
                            <input type="text" class="form-control" id="email" name="email" autocomplete="email" required>
                        </div>
                        <div class="mb-5">
                            <label for="passwordA" class="form-label">パスワード</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="passwordA" aria-label="password" name="password" required>
                                <span class="input-group-text material-symbols-outlined" id="visibleA">
                                    visibility
                                </span>
                            </div>
                            <!-- <a href="/resetPassword">パスワードの再設定はこちら</a> -->
                        </div>
                        <div class="text-center mb-1 px-lg-5">
                            <button class="btn btn-secondary w-100 disabled" id="loginBtn">ログイン</button>
                        </div>
                    </form>
                </div>

                <hr>

                <div class="d-flex justify-content-center">
                    <a class="btn btn-success mb-2" href="/register">HeartHospitalアカウントを新規作成フォームへ</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-warning" href="/">ホームへ戻る</a>
                </div>
            </div>
        </div>


                

    </div>
</div>

<script nonce="<%=nonce%>">
    // ログインボタンのアクティブ化
    const email = document.getElementById('email');
    const password = document.getElementById('passwordA');
    const loginButton = document.querySelector('#loginBtn');
    function btnActivate() {
        if (
          email.value.trim().includes('@') 
          && email.value.trim().includes('.') 
          && email.value.trim()[email.value.trim().length - 1] !== '@'
          && email.value.trim()[email.value.trim().length - 1] !== '.'
          && password.value.trim()
        ) {
            loginButton.classList.remove('disabled', 'btn-secondary');
            loginButton.classList.add('btn-primary');
        } else {
            loginButton.classList.remove('btn-primary');
            loginButton.classList.add('disabled', 'btn-secondary');
        }
    }
    email.addEventListener('input', btnActivate);
    password.addEventListener('input', btnActivate);

    // passwordが見れるようになる
    document.addEventListener('DOMContentLoaded', function () {
        const passwordField = document.getElementById('passwordA');
        const visibilityToggle = document.getElementById('visibleA');

        visibilityToggle.addEventListener('click', function () {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            
            if (type === 'text') {
                visibilityToggle.textContent = 'visibility_off';
            } else {
                visibilityToggle.textContent = 'visibility';
            }
        });
    });
</script>

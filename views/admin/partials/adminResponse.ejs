<h1>レス一覧</h1>
<div class="d-flex flex-wrap gap-2">
    <% for(let response of responses){ %>
        <div class="card mb-2 flex-grow-1" style="min-width: 18rem;max-width: 20rem;">
            <div class="card-body">
                <h6 class="card-title"><small>コメント: </small><%= response.comment %></h6>
                <p class="card-text m-0"><small>ペンネーム: </small><%=response.author.penName?response.author.penName:response.author.username %></p>
                <p class="card-text m-0"><small>コメント日: </small><%= response.responseDate %></p>
            </div>
            <div class="card-footer">
                    <p class="text-secondary"><small>病院名: </small><%= response.hospital.hospitalname %></p>
                    <p class="text-secondary"><small>元レビュー本文: </small><%= response.review.comment %></p>
                    <p class="text-secondary"><small>元レビューuser: </small><%= response.author.penName?response.author.penName:response.author.username %></p>
            </div>
            
            <div class="card-body d-flex gap-2">
                <form action="/admin/response/<%= response._id %>?_method=PATCH" method="POST">
                    <button class="btn btn-success">承認</button>
                </form>
                
                <div>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#responseDelete">
                        削除
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="responseDelete" tabindex="-1" aria-labelledby="responseDeleteLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="responseDeleteLabel">＞＞警告＜＜</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    レスの投稿を拒否し、削除しますか？
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <form action="/admin/response/<%= response._id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger">削除</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    <% } %>

</div>
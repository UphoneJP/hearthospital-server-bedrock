<h1>フィードバック一覧</h1>
<div class="d-flex flex-wrap gap-2">
    <% for(let fb of feedbacks){ %>
        <div class="card mb-2 flex-grow-1" style="min-width: 18rem;max-width: 20rem;">
            <div class="card-body">
                <p class="card-text"><%= fb.feedbackContent %></p>
            </div>
            <div class="card-footer p-2">
                <p class="card-text m-0"><%= fb.timestamp.toLocaleString() %></p>
                <form action="/admin/feedback/<%= fb._id %>?_method=PATCH" method="POST">
                    <button class="btn btn-danger">対応済みにする</button>
                </form>
            </div>
        </div>
    <% } %>
</div>

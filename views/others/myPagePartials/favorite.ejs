<h5 class="mt-3">■お気に入り(<%=user.favorites.length%>件)</h5>
<% if(user.favorites.length){ %>
    <div id="carouselFavoritesIndicators" class="carousel slide">
        <div class="carousel-indicators mb-0">
            <% for(let i = 0; i < user.favorites.length; i++){ %>
                <button type="button" style="border-top:10px solid orange;" data-bs-target="#carouselFavoritesIndicators" data-bs-slide-to="<%=i%>" class="<%=i===0?'active':''%>" <%=i===0?'aria-current="true"':''%> aria-label="Slide <%=i+1%>"></button>
            <% } %>
        </div>
        <div class="carousel-inner">
            <% user.favorites.forEach((review, i)=>{ %>
                <div class="carousel-item <%=i===0?'active':''%>">
                    <div class="card card-body px-5 pb-5<%=i===0?'active':''%>" style="height: 30vh;overflow:auto;">
                        <div class="card-text px-4">
                            <p>
                                <a href="/hospital/<%=review.hospital._id%>/review/<%=review._id%>">
                                    <%= review.title %>
                                </a>
                                <small>
                                    - <%= review.tweetDate %>
                                </small>
                            </p>
                            <p>
                                <%= review.comment %>
                            </p>
                            <p>
                                投稿者：
                                <a href="/othersPage/<%=review.author._id%>"><%= review.author.penName?review.author.penName:review.author.username %></a>
                            </p>
                        </div>
                    </div>    
                </div>
            <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselFavoritesIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true" style="color:orange;">◀</span>
        </button>
        <button class="carousel-control-next" typ◀e="button" data-bs-target="#carouselFavoritesIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true" style="color:orange;">▶</span>
        </button>
    </div>
<% } %>

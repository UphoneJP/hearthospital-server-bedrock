<h1>ポイント交換申請</h1>
<div class="d-flex flex-wrap gap-2">
    <% for(let giftRequest of giftRequests){ %>
        <div class="card mb-2 flex-grow-1" style="min-width: 18rem;max-width: 20rem;">
            <div class="card-body">
                <p class="card-text m-0">
                  <small class="text-primary">問合せ日時: </small>
                  <%= giftRequest.requestedAt.toLocaleString() %>
                </p>
                <p class="card-title">
                  <small class="text-primary">申請ポイント: </small>
                  <%= giftRequest.pointsUsed %>
                </p>
            </div>
            <div class="card-footer p-2">
                <p class="card-text m-0">
                    <small class="text-primary">
                        _id: 
                    </small>
                    <%= giftRequest.user._id %>
                </p>
                <p class="card-text m-0">
                    <small class="text-primary">
                        googleId: 
                    </small>
                    <%= giftRequest.user.googleId?giftRequest.user.googleId:'' %>
                </p>
                <p class="card-text m-0">
                    <small class="text-primary">
                        username: 
                    </small>
                    <a href="/myPage/<%=giftRequest.user._id%>">
                        <%= giftRequest.user.username?giftRequest.user.username: '' %>
                    </a>
                </p>
                <p class="card-text m-0">
                    <small class="text-primary">
                        penName: 
                    </small>
                    <%= giftRequest.user.penName %>
                </p>
                <p class="card-text m-0">
                    <small  class="text-primary">
                        email: 
                    </small>
                    <%= giftRequest.user.email %>
                </p>
            </div>
            <div class="card-body d-flex gap-2">
                <a href="/messages/<%=ownerId%>/<%=giftRequest.user._id%>" class="btn btn-primary">
                    返答する
                </a>
                <form action="/admin/giftRequest/<%= giftRequest._id %>?_method=PATCH" method="POST">
                    <button class="btn btn-danger">対応済みにする</button>
                </form>
            </div>
        </div>
    <% } %>

</div>

